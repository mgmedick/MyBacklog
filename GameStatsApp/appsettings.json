{
  "Serilog": {
    "Using": [ "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Email", "GameStatsApp.Common" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.ConsoleTheme::None, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "EmailCustom",
        "Args": {
          "fromEmail": "############",
          "toEmail": "############",
          "mailServer": "############",
          "port": "############",
          "enableSsl": "############",
          "userName": "############",
          "password": "############",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}",
          "batchPostingLimit": "1",
          "mailSubject": "Error",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "SiteSettings": {
    "FromEmail": "############",
    "EmailUsername": "############",
    "EmailPassword": "############",
    "SmtpHost": "############",
    "SmtpPort": "999",
    "HashKey": "############",
    "MaxPasswordAttempts": "5",
    "IndexDemoImagePath": "/dist/images/index_demo_{0}.jpg",
    "ImportDemoImagePath": "/dist/images/import_demo_{0}.jpg",
    "SettingsDemoImagePath": "/dist/images/settings_demo_{0}.jpg"
  },
  "Auth": {
    "Google": {
      "ClientID": "############",
      "RecaptchaKey": "############",
      "RecaptchaSecret": "############"
    },    
    "Facebook": {
      "ClientID": "############",
      "ClientSecret": "############",
      "ApiVersion": "############"
    },        
    "Microsoft": {
      "ClientID": "############",
      "ClientSecret": "############",
      "RedirectPath": "/User/MicrosoftAuthCallback"
    },
    "Steam": { 
      "ClientID": "############",
      "RedirectPath": "/User/SteamAuthCallback"
    }    
  },  
  "ConnectionStrings": {
    "DBConnectionString": "Server=localhost;Uid=############;Pwd=############;Database=GameStatsApp;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*"
}
