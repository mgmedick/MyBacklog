@using System.Security.Claims

<div class="container-lg p-0">
    @if (!User.Identity.IsAuthenticated)
    {
        <div><span>Please login to view user settings</span></div>
    }
    else 
    {
        <h5 class="m-0 font-weight-bold m-0">@User.FindFirst(ClaimTypes.Name).Value</h5>
        <div>
            <user-settings :userid="'@User.FindFirst(ClaimTypes.NameIdentifier).Value'"></user-settings>
        </div>    
    }
</div>




























